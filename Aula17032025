        "  print('Sem desconto, otáro!')\n",
        "elif valor_compra <= 500:\n",
        "  print(valor_compra * 0.1)\n",
        "elif valor_compra <= 1000:\n",
        "  print (valor_compra * 0.2)\n",
        "else:\n",
        "  print (valor_compra * 0.3)"
